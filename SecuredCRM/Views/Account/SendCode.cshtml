@model SecuredCRM.Models.SendCodeViewModel
@{
	ViewBag.Title = "שליחת קוד אימות";
}

<div class="container" >
	<h2>@ViewBag.Title</h2>

	@using (Html.BeginForm("SendCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
	{
		@Html.AntiForgeryToken()
		<div class="row">
			<h4>בחר שיטה לאימות נוסף</h4>
			@Html.DropDownListFor(model => model.SelectedProvider, Model.Providers)
			<input type="submit" value="בצע" class="btn btn-default" />
		</div>
	}
	</div>
	@section Scripts {
		@Scripts.Render("~/bundles/jqueryval")
	}
